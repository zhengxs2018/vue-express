{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": false,
    "skipLibCheck": true,
    "lib": ["DOM", "ES2018"],
    "jsx": "preserve",
    "jsxFactory": "h",
    "strict": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "newLine": "lf"
  }
}
